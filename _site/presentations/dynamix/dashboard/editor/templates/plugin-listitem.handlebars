<li data-role="collapsible" data-iconpos="right" class="plugin-listitem collapsible" data-pluginid="{{plugin.pluginId}}" data-collapsed-icon="carat-d" and data-expanded-icon="carat-u">
    <h2>{{plugin.name}}</h2>
    <fieldset class="ui-grid-a">
        <div class="ui-block-a">
            <button type="submit" class="ui-btn ui-corner-all ui-icon-delete ui-btn-icon-right revoke-access">Remove <br/> all</button>
        </div>
        <div class="ui-block-b">
            <button type="submit" class="ui-btn ui-corner-all ui-icon-plus ui-btn-icon-right add-new-device">Add <br/> new</button>
        </div>
    </fieldset>

    <br/>

    <ul data-role="listview" data-shadow="false" class="device-list" data-pluginid="{{plugin.pluginId}}" data-inset="true" data-corners="false">

    </ul>
</li>   